{
  "name": "@updatemybrowser-v5/core",
  "version": "0.0.0",
  "repository": "github:hongaar/updatemybrowser-v5",
  "license": "MIT",
  "author": "Joram van den Boezem <joram@vandenboezem.nl>",
  "type": "module",
  "main": "dist/index.js",
  "types": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "yarn clean && tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist && rm -rf types",
    "prepublish": "yarn build",
    "test": "NODE_OPTIONS='--loader=ts-node/esm --no-warnings' node --test test/*.test.ts | tap"
  },
  "devDependencies": {
    "@types/node": "20.6.4",
    "tap": "18.1.5",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  },
  "moker": {
    "plugins": [
      "typescript",
      "test"
    ]
  }
}
